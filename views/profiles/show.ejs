<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<link rel="stylesheet" href="/stylesheets/style.css" />

<%- include('../partials/nav') %>

<main>
  <img src="/images/img/icons/crowns.png" alt="crown" class="top-dino">
  <h1><%= profile.name %>'s Creatures</h1>
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g1 px-4"
    >
    <% creatures.forEach(creature => { %>
      <% if (creature.profile.equals(profile._id)) { %>
        <div class="col">
          <a class="text-decoration-none" href="/creatures/<%= creature._id %>">
            <div class="card mb-4 shadow-sm">
              <% if (creature.dragon) { %> 
                <img
                  class="card-img-top"
                  src="/images/img/icons/dragon.png"
                  alt="dragon"
                  width="100%"
                />
              <% } else { %> 
                <% if (creature.animalClass === 'Mammal') { %> 
                  <img
                    class="card-img-top"
                    src="/images/img/icons/smilodon.png"
                    alt="smilodon"
                    width="100%"
                  />
                <% } %> 
                <% if (creature.animalClass === 'Reptile') { %> 
                  <img
                    class="card-img-top"
                    src="/images/img/icons/tyrannosaurus.png"
                    alt="tyrannosaurus"
                    width="100%"
                  />
                <% } %>
                <% if (creature.animalClass === 'Bird') { %> 
                  <img
                    class="card-img-top"
                    src="/images/img/icons/hawk.png"
                    alt="hawk"
                    width="100%"
                  />
                <% } %>
                <% if (creature.animalClass === 'Insect') { %> 
                  <img
                    class="card-img-top"
                    src="/images/img/icons/insect.png"
                    alt="insect"
                    width="100%"
                  />
                <% } %>
                <% if (creature.animalClass === 'Amphibian') { %> 
                  <img
                    class="card-img-top"
                    src="/images/img/icons/newt.png"
                    alt="newt"
                    width="100%"
                  />
                <% } %>
              <% } %> 
              <div class="card-body">
                <p class="card-title fs-3 text-dark"><%= creature.name %></p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      <% }) %>
    </div>
  </div>
</main>

<script 
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
  crossorigin="anonymous"
></script>

<%- include('../partials/footer') %>